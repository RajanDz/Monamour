<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDataProvider" class="com.appmicroservice.javapracticeudemy.UserDatabaseProvider"></bean>
    <bean id="userDataFromWebService" class="com.appmicroservice.javapracticeudemy.UserDataFromWebService"></bean>

    <bean id="userManagerWithUserDataProvider" class="com.appmicroservice.javapracticeudemy.UserManager">
    <constructor-arg ref="userDataProvider"></constructor-arg>
</bean>

    <bean id="userManagerWithUserDataWebService" class="com.appmicroservice.javapracticeudemy.UserManager">
        <constructor-arg ref="userDataFromWebService"></constructor-arg>
    </bean>

</beans>
