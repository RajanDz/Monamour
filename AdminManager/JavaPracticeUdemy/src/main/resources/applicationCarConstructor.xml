<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="carSpecification" class="com.appmicroservice.javapracticeudemy.CarSpecification">
        <property name="brand" value="Audi"></property>
        <property name="model" value="A4"></property>
    </bean>

    <bean id="myCar" class="com.appmicroservice.javapracticeudemy.Car">
        <constructor-arg ref="carSpecification"></constructor-arg>
    </bean>
</beans>